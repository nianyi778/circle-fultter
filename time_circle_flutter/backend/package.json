{
  "name": "aura-api",
  "version": "1.0.0",
  "description": "Aura 拾光 - Backend API",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:migrate:local": "wrangler d1 execute aura-db --local --file=./migrations/0001_initial_schema.sql",
    "db:migrate:remote": "wrangler d1 execute aura-db --remote --file=./migrations/0001_initial_schema.sql",
    "db:seed:local": "wrangler d1 execute aura-db --local --file=./migrations/0002_seed_data.sql",
    "db:seed:remote": "wrangler d1 execute aura-db --remote --file=./migrations/0002_seed_data.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "typescript": "^5.7.0",
    "wrangler": "^3.99.0"
  }
}
